{
  "name": "nyala-motors",
  "version": "1.0.0",
  "description": "Official website of Nyala Motors S.C.",
  "repository": "git@github.com:kelaltech/nyala-motors.git",
  "author": "Kelal Tech <info@kelaltech.com> (https://www.kelaltech.com)",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "strapi",
    "www"
  ],
  "engines": {
    "node": ">=12.0.0",
    "yarn": ">=1.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@graphql-cli/codegen": "^1.15.4",
    "@graphql-codegen/cli": "^1.15.4",
    "@graphql-codegen/typescript": "^1.15.4",
    "@graphql-codegen/typescript-operations": "^1.15.4",
    "@graphql-codegen/typescript-react-apollo": "^1.15.4",
    "cross-env": "^7.0.2",
    "graphql": "^14.6.0",
    "graphql-cli": "^4.0.0",
    "graphql-config": "^3.0.2",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  },
  "resolutions": {
    "**/graphql": "^14.6.0"
  },
  "scripts": {
    "run-p": "run-p",
    "run-s": "run-s",
    "codegen": "graphql codegen",
    "gen": "run-s \"codegen --watch\"",
    "format:strapi": "cd strapi && run-s format",
    "format:www": "cd www && run-s format",
    "format": "run-p format:strapi format:www",
    "build:strapi": "cd strapi && run-s build",
    "build:www": "cd www && run-s build",
    "build": "run-p build:strapi build:www",
    "develop:strapi": "cd strapi && run-s develop",
    "develop:www": "cd www && run-s develop",
    "develop": "run-p build:strapi build:www",
    "test:strapi": "cd strapi && run-s test",
    "test:www": "cd www && run-s test",
    "test": "run-p test:strapi test:www",
    "prod": "cross-env NODE_ENV=production CI=true run-p \"run-s codegen build test\" format",
    "strapi": "run-s develop:strapi",
    "www": "run-s codegen && run-p gen develop:www",
    "start": "run-p strapi www",
    "all": "run-p start \"schema --watch\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-p format test && git update-index --again"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
