{
  "name": "nyala-motors",
  "version": "0.0.0",
  "description": "Official website of Nyala Motors S.C.",
  "repository": "git@github.com:kelaltech/nyala-motors.git",
  "author": "kelal tech plc <info@kelaltech.com> (https://www.kelaltech.com)",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "strapi",
    "www"
  ],
  "dependencies": {
    "@graphql-codegen/cli": "^1.13.3",
    "@graphql-codegen/typescript": "^1.13.3",
    "@graphql-codegen/typescript-operations": "^1.13.3",
    "@graphql-codegen/typescript-react-apollo": "^1.13.3",
    "cross-env": "^7.0.2",
    "graphql": "^15.0.0",
    "graphql-config": "^3.0.0",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  },
  "scripts": {
    "run-p": "run-p",
    "run-s": "run-s",
    "schema": "graphql get-schema",
    "codegen": "echo TODO: graphql-codegen --config codegen.yml",
    "gen": "run-s codegen --watch",
    "format:strapi": "cd strapi && run-s format",
    "format:www": "cd www && run-s format",
    "format": "run-p format:strapi format:www",
    "build:strapi": "cd strapi && run-s build",
    "build:www": "cd www && run-s build",
    "build": "run-p build:strapi build:www",
    "test:strapi": "cd strapi && run-s test",
    "test:www": "cd www && run-s test",
    "test": "run-p test:strapi test:www",
    "prod": "cross-env NODE_ENV=production CI=true run-p \"run-s codegen build test\" format",
    "strapi": "cd strapi && run-s develop",
    "www": "cd www && run-s develop",
    "start": "run-s codegen && run-p gen strapi www"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-p format test && git update-index --again"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
