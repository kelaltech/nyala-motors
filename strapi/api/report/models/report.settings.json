{
  "kind": "collectionType",
  "collectionName": "reports",
  "info": {
    "name": "Report"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "ANNUAL",
        "QUARTERLY",
        "OTHER"
      ],
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "attachments": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "featured": {
      "type": "boolean"
    }
  }
}
