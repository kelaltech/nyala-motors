{
  "kind": "collectionType",
  "collectionName": "reports",
  "info": {
    "name": "Report"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "ANNUALLY",
        "QUARTERLY",
        "SEMI_ANNUALLY",
        "FINANCIAL"
      ]
    },
    "excerpt": {
      "type": "text"
    },
    "attachments": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
